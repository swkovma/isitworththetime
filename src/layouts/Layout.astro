---
import "../global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title = "Is it worth the time?",
  description = "Calculate how much to spend on tools based on the time you'll save.",
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteUrl = Astro.site;
const canonicalUrl = siteUrl ? new URL(currentPath, siteUrl).toString() : undefined;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <title>{title}</title>
  {canonicalUrl && <link rel="canonical" href={canonicalUrl}/>}
  <meta name="description" content={description}/>

  <meta name="og:title" content={title}/>
  <meta name="og:description" content={description}/>
  {canonicalUrl && <meta name="og:url" content={canonicalUrl}/>}
  <meta name="og:site_name" content="Is it worth the time?"/>
  <meta name="og:image" content={siteUrl + 'og-image.png'}/>
  <meta property="og:image:type" content="image/png">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta name="og:type" content="website"/>

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={siteUrl + 'og-image.png'}>

  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"/>
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"/>
  <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png">
  <link rel="manifest" href="/manifest.json"/>

  <link rel="preload" href="/fonts/subset-IBMPlexSerif-SemiBold.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <link rel="preload" href="/fonts/subset-IBMPlexSans-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <link rel="preload" href="/fonts/subset-IBMPlexSans-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <link rel="preload" href="/fonts/subset-IBMPlexSans-SemiBold.woff2" as="font" type="font/woff2" crossorigin="anonymous">
</head>
<body>
<slot/>

<!-- privacy-first analytics -->
<script async is:inline src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
</body>
</html>
